    <jar destfile="${jars}/pluginc.jar" basedir="${lib}">
      <manifest>
        <attribute name="Main-Class"
         value="com.google.caja.plugin.PluginCompilerMain"/>
      </manifest>
    </jar>
    <jar destfile="${jars}/pluginc-src.jar" basedir="${src}"/>
  </target>

